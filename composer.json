{
    "require": {
        "php": ">=5.4.0",
        "illuminate/database": "4.2.*",
        "illuminate/queue" : "4.2.*",
        "illuminate/container": "4.2.*",
        "alnutile/core_app": "*",
        "pda/pheanstalk": "~2.1"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/alnutile/core_app.git"
        }
    ],
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/services",
            "app/repositories",
            "app/models",
            "app/database/migrations",
            "app/database/seeds"
        ],
        "psr-0": {
            "Foo\\": "app/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "3.*",
        "mockery/mockery": "*@dev"
    },
    "suggest": {
        "psliwa/php-pdf": "PDF Parser",
        "twig/twig":"Theme if not using for just Rest",
        "pda/pheanstalk": "A different Queue",
        "doctrine/dbal": "ORM",
        "cuab/phpcrawl" : "Site crawling for sitemaps etc",
        "flowjs/flow-php-server": "Easy backend to JS frontends uploading image(s)"
    },
    "scripts": {
        "post-install-cmd": [
            "php setup/setup.php",
            "composer dump"
        ]
    },
    "config": {
        "bin-dir": "bin/"
    },
    "minimum-stability": "dev"
}
